  border-bottom: 2rpx dashed #efeff1;
}

.headimage {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 0rpx;
  margin-top: 15rpx;
  /* border:1rpx solid #ffd92e; */
}

